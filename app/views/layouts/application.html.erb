<!DOCTYPE html>
<html>
  <head>
    <title>Flashcards</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body ng-app="flashcardApp">
   <ui-view></ui-view>
    <script type="text/ng-template" id="/home.html">
      <div>
        <div ng-repeat="flashcard in flashcards">
          <div>Q: {{ flashcard.question }}</div>

          <div>A: {{ flashcard.answer }}</div>
          <div>bin: {{ flashcard.bin }}</div>
          <div>Scheduled for review: {{ flashcard.scheduled_time_to_revisit }}</div>
          <div>Times wrong: {{ flashcard.times_wrong }}</div>
        </div>
      </div>

      <form ng-submit="addFlashcard()">
        <input type="text" placeholder="Word" ng-model="question"></input>
        <input type="text" placeholder="Definition" ng-model="answer"></input>
        <button type="submit">Create</button>
      </form>
    </script>
  </body>
</html>
